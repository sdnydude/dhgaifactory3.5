# =============================================================================
# DHG AI Factory - Environment Configuration
# =============================================================================
# Copy this file to .env and customize as needed
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=onyx

# -----------------------------------------------------------------------------
# Onyx/Danswer Configuration
# -----------------------------------------------------------------------------
# Authentication: disabled, basic, google_oauth, oidc
AUTH_TYPE=disabled

# Logging level: debug, info, warning, error
LOG_LEVEL=info

# Embedding model
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1

# -----------------------------------------------------------------------------
# Whisper Transcription
# -----------------------------------------------------------------------------
# Model size: tiny, base, small, medium, large
WHISPER_MODEL=base

# -----------------------------------------------------------------------------
# Cloud API Fallbacks (Optional)
# -----------------------------------------------------------------------------
# If local LLM is unavailable, use these as fallbacks
# Leave empty to disable fallbacks

# Gemini API (primary fallback)
GEMINI_API_KEY=

# Claude/Anthropic API (secondary fallback)
ANTHROPIC_API_KEY=

# Deepgram (transcription fallback)
DEEPGRAM_API_KEY=

# -----------------------------------------------------------------------------
# Corporate Proxy (Optional)
# -----------------------------------------------------------------------------
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1,.company.com

# -----------------------------------------------------------------------------
# SSL/TLS (Optional - for production)
# -----------------------------------------------------------------------------
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
