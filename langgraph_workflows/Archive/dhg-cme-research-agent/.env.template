# DHG CME Research Agent - Environment Configuration
# Copy to .env and fill in your API keys

# =============================================================================
# LANGSMITH CLOUD (Required for tracing)
# =============================================================================

# LangSmith API key from https://smith.langchain.com/settings
LANGCHAIN_API_KEY=lsv2_pt_your-key-here

# Enable tracing (required)
LANGCHAIN_TRACING_V2=true

# Project name in LangSmith (creates if doesn't exist)
LANGCHAIN_PROJECT=dhg-cme-research-agent

# Optional: LangSmith endpoint (default is cloud)
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Anthropic Claude API (for complex synthesis and CME content)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Google AI / Gemini API (for bulk processing - cost optimization)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-ai-key-here

# Perplexity API (for academic search with citations)
# Get your key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-key-here

# NCBI/PubMed E-Utilities (free, but key increases rate limit)
# Register at: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=your-ncbi-key-here
NCBI_EMAIL=research@digitalharmonygroup.com

# =============================================================================
# OPTIONAL - ADDITIONAL SOURCES
# =============================================================================

# Semantic Scholar API (optional - academic paper search)
# Register at: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=

# Cochrane Library API (if available through institutional access)
COCHRANE_API_KEY=

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL with pgvector)
# =============================================================================

# PostgreSQL connection for citation caching and vector search
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dhg_cme_research
POSTGRES_USER=dhg_research
POSTGRES_PASSWORD=secure-password-here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default models (can be overridden per request)
DEFAULT_SYNTHESIS_MODEL=claude-sonnet-4-20250514
DEFAULT_SCREENING_MODEL=gemini-2.5-flash-preview-05-20
DEFAULT_EXTRACTION_MODEL=claude-3-5-haiku-20241022

# Cost thresholds (in USD)
MAX_COST_PER_QUERY=5.00
ALERT_COST_THRESHOLD=2.00

# =============================================================================
# EVIDENCE CONFIGURATION
# =============================================================================

# Default minimum evidence level (1a, 1b, 2a, 2b, 3, 4, 5)
DEFAULT_MIN_EVIDENCE_LEVEL=2b

# Default date range for literature (years)
DEFAULT_DATE_RANGE_YEARS=5

# Maximum citations per query
DEFAULT_MAX_CITATIONS=50

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# =============================================================================
# DOCKER/DEPLOYMENT
# =============================================================================

CONTAINER_NAME=dhg-cme-research-agent
CONTAINER_PORT=8080
