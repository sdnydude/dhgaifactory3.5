# ============================================================================
# DHG AI FACTORY - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=dhg
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=dhg_registry
POSTGRES_HOST=registry-db
POSTGRES_PORT=5432

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/logs

# ============================================================================
# CME CONFIGURATION
# ============================================================================
CME_MODE_DEFAULT=auto  # Options: auto, cme, non-cme
ACCME_STRICT_MODE=true
MOORE_LEVELS_VALIDATION=true
FAIR_BALANCE_CHECK=true

# ============================================================================
# API KEYS - LLM PROVIDERS
# ============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=

# ============================================================================
# API KEYS - RESEARCH SOURCES
# ============================================================================
PUBMED_API_KEY=
NCBI_API_KEY=
CONSENSUS_API_KEY=
PERPLEXITY_API_KEY=
CLINICALTRIALS_API_KEY=
AHRQ_API_KEY=
NIH_REPORTER_API_KEY=

# ============================================================================
# API KEYS - DATA SOURCES
# ============================================================================
CDC_WONDER_API_KEY=
CMS_API_KEY=
USPSTF_API_KEY=

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================
# Orchestrator
ORCHESTRATOR_PORT=8001
ORCHESTRATOR_TIMEOUT=300

# Medical LLM Agent
MEDICAL_LLM_PORT=8002
MEDICAL_LLM_MODEL=gpt-4o
MEDICAL_LLM_TEMPERATURE=0.3

# Research Agent
RESEARCH_PORT=8003
RESEARCH_CACHE_TTL=86400
RESEARCH_MAX_RESULTS=50

# Curriculum Agent
CURRICULUM_PORT=8004
CURRICULUM_TEMPLATE_PATH=/app/templates

# Outcomes Agent
OUTCOMES_PORT=8005
OUTCOMES_MOORE_LEVELS=7

# Competitor Intelligence Agent
COMPETITOR_INTEL_PORT=8006
COMPETITOR_INTEL_SOURCES=accme,medscape,webmd

# QA/Compliance Agent
QA_COMPLIANCE_PORT=8007
QA_COMPLIANCE_STRICT=true
QA_ACCME_STANDARDS_PATH=/app/data/accme_standards.json

# ============================================================================
# REFERENCE VALIDATION
# ============================================================================
REFERENCE_URL_VALIDATION=true
REFERENCE_RETRY_ATTEMPTS=1
REFERENCE_TIMEOUT=10

# ============================================================================
# VECTOR DATABASE
# ============================================================================
VECTOR_DIMENSIONS=1536
VECTOR_SIMILARITY_THRESHOLD=0.75
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# SECURITY
# ============================================================================
API_KEY_ROTATION_DAYS=90
ENABLE_API_AUTH=true
JWT_SECRET=changeme_jwt_secret
JWT_EXPIRATION=3600

# ============================================================================
# MONITORING
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true
ENABLE_TRACING=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_COMPETITOR_INTEL=true
ENABLE_AUTO_RESEARCH=true
ENABLE_REFERENCE_CACHING=true
ENABLE_MULTI_PERSONA_GENERATION=true
ENABLE_BAYESIAN_ESTIMATES=true
ENABLE_CHAOS_MONKEY_RISK=true

# ============================================================================
# NOTIFICATIONS - Human Review Workflow
# ============================================================================
# SMTP (Email) - Required for reviewer notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@digitalharmonyai.com
SMTP_FROM_NAME=DHG CME Review

# Google Chat - Optional webhook for team notifications
GOOGLE_CHAT_DEFAULT_WEBHOOK=
GOOGLE_CHAT_ESCALATION_WEBHOOK=

# Review SLA Configuration
REVIEW_SLA_HOURS=24
REVIEW_WARNING_HOURS=4
REVIEW_MAX_REVIEWERS=3
